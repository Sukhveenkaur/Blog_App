     <div class="ml-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-4">
        {{#each blogs as |blog|}}
            <div class="max-w-md bg-white p-6 rounded-md shadow-md">
                <div class="text-xl font-bold mb-2">{{blog.title}}</div>
                <div class="text-gray-700">{{blog.content}}</div>
                {{#if blog.imageUrl}}
                    <img src="{{blog.imageUrl}}" alt="Blog Image" class="mt-4">
                {{/if}}

                {{#if (eq user._id blog.user)}}
                    <a href="/editblog/{{blog._id}}" class="text-blue-500">Edit</a>
                    <a href="/deleteblog/{{blog._id}}" class="text-red-500 ml-4">Delete</a>
                {{/if}}
            </div>
        {{/each}}
    </div>

